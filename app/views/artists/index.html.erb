<p id="notice"><%= notice %></p>

<div id = "search">
<br><%= render 'form' %><br>
</div>

<header class = "jumbotron">
<div id= "spyLogo"><%= image_tag "Spy1.png", :width => 50, :height => 50 %></div>
<h2 id="welcome">Welcome, <%=current_user.name%>!</h2>

<h1>All Artists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>On tour</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @artists.each do |artist| %>
      <tr>
        <td><%= link_to artist.name, artist_path(artist.id) %></td>
        <td><%= artist.on_tour %></td>
        <td><% if UserArtist.find_by(user_id: current_user.id, artist_id: artist.id) %>
              <%= link_to '<button>Unfollow</button>'.html_safe, user_artist_path(artist.id), method: :delete, data: { confirm: 'Are you sure?' } %>
            <% else %>
              <%= form_for(@user_artist) do |f| %>
                <%= f.hidden_field :user_id, value: current_user.id %>
                <%= f.hidden_field :artist_id, value: artist.id %>
                <%= f.submit "Follow" %>
              <% end %>
            <% end %></td>
        <td><%= link_to 'Delete', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


</header>

<h3 class="alert alert-dismissible alert-success">Check out these upcoming events in <%=current_user.location%>:</h3>

<br>

<ul class = "cityEvents">
 <% @events.each do |event| %>
  <li class = "jumbotron", class = "cityEvents"><a href="<%=event.artists.first.bandsintown_url%>"><%=event.artists.first.name %></a> -- <%= event.venue.name %> -- <strong><%= event.datetime.strftime("%l%p, %A, %B %d") %></strong> --

  <% if event.ticket_status == 'unavailable' %>
  <%= 'No tickets available' %>
  <% else event.ticket_status == 'available' %>
  <%= link_to event.ticket_url do %>
    Tickets
    <% end %>
  <% end %></li>



<br>

<% end %>


<%= link_to 'Follow New Artist', new_artist_path %>


